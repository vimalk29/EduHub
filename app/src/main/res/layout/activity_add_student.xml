<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.AddStudent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_backStu"
            android:src="@drawable/ic_arrow_back_b_24dp"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/s"
            android:text="Add Student"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/s"
        android:background="#000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_above="@+id/studentSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/inputProfile"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_below="@id/inputProfile"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:text="Upload profile picture"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginBottom="3dp"/>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputStuName"
                    android:layout_marginHorizontal="5dp"
                    android:hint="Student Name"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputStuEmail"
                    android:layout_marginHorizontal="5dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputStuAddress"
                    android:layout_below="@id/email"
                    android:layout_marginHorizontal="5dp"
                    android:hint="Address"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputStuNumber"
                    android:layout_below="@id/editTextAddress"
                    android:hint="Mobile Number"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="20dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputStuParentName"
                    android:layout_marginHorizontal="5dp"
                    android:hint="Parent Name"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inputStuParentNumber"
                    android:layout_marginHorizontal="5dp"
                    android:hint="Parent Number"
                    android:inputType="number"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/studentSubmit"
            android:layout_alignParentBottom="true"
            android:text="Submit"
            android:textSize="13sp"
            android:textColor="#fff"
            android:background="#0C164D"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</RelativeLayout>

</LinearLayout>
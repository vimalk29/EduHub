<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.nav_frag_teacher.FragmentUploadTeacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="6">

        <LinearLayout
            android:layout_weight="5"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/attendanceT"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/shape_cardview"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:drawableTop="@drawable/ic_account_circle_black_24dp"
                            android:text="Attendence"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/assignmentT"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/shape_cardview"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:text="Assignment"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:fontFamily="serif"
                            android:drawableTop="@drawable/ic_account_circle_black_24dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/projectsT"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/shape_cardview"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:drawableTop="@drawable/ic_account_circle_black_24dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Projects"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/marksT"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/shape_cardview"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:drawableTop="@drawable/ic_account_circle_black_24dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Marks"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/timeTableT"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/shape_cardview"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:drawableTop="@drawable/ic_account_circle_black_24dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Time Table"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/syllabusT"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/shape_cardview"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:drawableTop="@drawable/ic_account_circle_black_24dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Syllabus"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/addStudents"
                android:background="@drawable/shape_cardview"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <TextView
                    android:drawableTop="@drawable/ic_person_add_black_24dp"
                    android:layout_centerInParent="true"
                    android:text="Add Student"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/report"
                android:text="Report an issue!"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
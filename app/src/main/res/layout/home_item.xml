<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ques">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageLike"
                    android:src="@drawable/ic_arrow_drop_up_black_24dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:id="@+id/likesNumber"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imageDislike"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/userProfile"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/userId"
                    android:layout_toRightOf="@id/userProfile"
                    android:layout_marginTop="10dp"
                    android:text="username"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/userQues"
                    android:layout_below="@id/userId"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Question"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewAnswers"
                    android:text="view all answers"
                    android:layout_below="@id/userQues"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextAnswer"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:hint=" Answer"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_chat_bubble_black_24dp"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/buttonSend"
                    android:layout_toEndOf="@id/editTextAnswer"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="25dp" />
            </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>